{{#section 'styles'}}
<link rel="stylesheet" href="css/pedidosFeitos.css">
{{/section}}

{{!-- icones --}}

<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>

{{!-- navegador interno da pagina --}}

<div class="container">

    <div class="navegador">

        <ul>
            <li>
                <a href="#">
                    <span class="icon">
                        <ion-icon name="apps-outline"></ion-icon>
                    </span>
                    <span class="title">Opções</span>
                </a>
            </li>

            <li>
                <a href="/funcionario">
                    <span class="icon">
                        <ion-icon name="clipboard-outline"></ion-icon>
                    </span>
                    <span class="title">Estoque</span>
                </a>
            </li>

            <li>
                <a href="/cadastroProdutos">
                    <span class="icon">
                        <ion-icon name="add-outline"></ion-icon>
                    </span>
                    <span class="title">Cadastro produtos</span>
                </a>
            </li>

            <li>
                <a href="/pedidosFeitos">
                    <span class="icon">
                        <ion-icon name="bag-check-outline"></ion-icon>
                    </span>
                    <span class="title">Pedidos feitos</span>
                </a>
            </li>

            <!-- Novo ícone adicionado -->
            <li>
                <a href="/cadastroCliente">
                    <span class="icon">
                        <ion-icon name="person-outline"></ion-icon>
                    </span>
                    <span class="title">Cadastro Clientes</span>
                </a>
            </li>

            <li>
                <a href="/">
                    <span class="icon">
                        <ion-icon name="exit-outline"></ion-icon>
                    </span>
                    <span class="title">Sair</span>
                </a>
            </li>
        </ul>

    </div>

</div>


<div class="pedidos">

    <h2>Pedidos a serem enviados:</h2>

    <table>
        <thead>
            <tr>
                <td>ID:</td>
                <td>Pedido:</td>
                <td>Endereço:</td>
                <td>Cep:</td>
                <td>Status:</td>
            </tr>
        </thead>

        {{#each dados}}
        <tr>
            <td>{{id}}</td>
            <td>{{pedido}}</td>
            <td>{{endereco}}</td>
            <td>{{cep}}</td>
            <td><label class="switch">
                    <input checked="" type="checkbox">
                    <div class="slider">
                        <div class="circle">
                            <svg class="cross" xml:space="preserve" style="enable-background:new 0 0 512 512"
                                viewBox="0 0 365.696 365.696" y="0" x="0" height="6" width="6"
                                xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1"
                                xmlns="http://www.w3.org/2000/svg">
                                <g>
                                    <path data-original="#000000" fill="currentColor"
                                        d="M243.188 182.86 356.32 69.726c12.5-12.5 12.5-32.766 0-45.247L341.238 9.398c-12.504-12.503-32.77-12.503-45.25 0L182.86 122.528 69.727 9.374c-12.5-12.5-32.766-12.5-45.247 0L9.375 24.457c-12.5 12.504-12.5 32.77 0 45.25l113.152 113.152L9.398 295.99c-12.503 12.503-12.503 32.769 0 45.25L24.48 356.32c12.5 12.5 32.766 12.5 45.247 0l113.132-113.132L295.99 356.32c12.503 12.5 32.769 12.5 45.25 0l15.081-15.082c12.5-12.504 12.5-32.77 0-45.25zm0 0">
                                    </path>
                                </g>
                            </svg>
                            <svg class="checkmark" xml:space="preserve" style="enable-background:new 0 0 512 512"
                                viewBox="0 0 24 24" y="0" x="0" height="10" width="10"
                                xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1"
                                xmlns="http://www.w3.org/2000/svg">
                                <g>
                                    <path class="" data-original="#000000" fill="currentColor"
                                        d="M9.707 19.121a.997.997 0 0 1-1.414 0l-5.646-5.647a1.5 1.5 0 0 1 0-2.121l.707-.707a1.5 1.5 0 0 1 2.121 0L9 14.171l9.525-9.525a1.5 1.5 0 0 1 2.121 0l.707.707a1.5 1.5 0 0 1 0 2.121z">
                                    </path>
                                </g>
                            </svg>
                        </div>
                    </div>
                </label></td>
        </tr>
        {{/each}}

    </table>

</div>